{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Exam Schema",
  "type": "object",
  "required": ["exam", "ui", "questions"],
  "properties": {
    "exam": {
      "type": "object",
      "required": ["id", "title", "subtitle", "description"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "title": { "type": "string", "minLength": 1 },
        "subtitle": { "type": "string" },
        "description": { "type": "string" },
        "version": { "type": "string" },
        "timeLimitSeconds": { "type": ["integer", "null"], "minimum": 1 },
        "metadata": { "type": "object" }
      },
      "additionalProperties": true
    },
    "ui": {
      "type": "object",
      "required": ["primaryCTA", "submitCTA", "requireAllAnswered"],
      "properties": {
        "primaryCTA": { "type": "string" },
        "submitCTA": { "type": "string" },
        "requireAllAnswered": { "type": "boolean" },
        "showPerQuestionFeedbackOnReview": { "type": "boolean" },
        "progressCounter": { "type": "boolean" },
        "mode": { "type": "string", "enum": ["exam", "practice"] }
      },
      "additionalProperties": true
    },
    "questions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "type", "question", "options", "explanationCorrectAnswer"],
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "type": { "type": "string", "const": "single_choice" },
          "category": { "type": "string" },
          "difficulty": { "type": "string" },
          "question": { "type": "string", "minLength": 3 },
          "options": {
            "type": "array",
            "minItems": 3,
            "maxItems": 3,
            "items": {
              "type": "object",
              "required": ["key", "text", "isCorrect", "feedback"],
              "properties": {
                "key": { "type": "string", "pattern": "^[A-C]$" },
                "text": { "type": "string", "minLength": 1 },
                "isCorrect": { "type": "boolean" },
                "feedback": { "type": "string" }
              },
              "additionalProperties": false
            }
          },
          "explanationCorrectAnswer": { "type": "string", "minLength": 3 }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": false
}
